    <util:map id="profiles" value-type="me.t.kaurami.service.setting.Profile">
        <entry key="Волгоград">
            <ref bean="profileVolgograd"/>
        </entry>
        <entry key="Краснодар">
            <ref bean="profileKrasnodar"/>
        </entry>
        <entry key="Ростов">
            <ref bean="profileRostov"/>
        </entry>
    </util:map>

