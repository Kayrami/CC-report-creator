    <bean id="profileKrasnodar" class="me.t.kaurami.service.setting.Profile">
        <property name="name" value="Краснодар"/>
        <property name="xmlConfig" value="app-context-Krasnodar.xml"/>
        <property name="innerName" value="Krasnodar"/>
    </bean>

    <bean id="profileRostov" class="me.t.kaurami.service.setting.Profile">
        <property name="name" value="Ростов"/>
        <property name="xmlConfig" value="app-context-Rostov.xml"/>
        <property name="innerName" value="Rostov-on-Don"/>
    </bean>

    <bean id="profileVolgograd" class="me.t.kaurami.service.setting.Profile">
        <property name="name" value="Волгоград"/>
        <property name="xmlConfig" value="app-context-Volgograd.xml"/>
        <property name="innerName" value="Volgograd"/>
    </bean>

    <bean id="textBean" class="java.lang.String">
        <constructor-arg index="0" value="text"/>
    </bean>

</beans>